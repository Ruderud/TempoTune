{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@tempo-tune/shared/*": ["../../packages/shared/src/*"],
      "@tempo-tune/audio/*": ["../../packages/audio/src/*"]
