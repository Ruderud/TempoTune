{
  "name": "@tempo-tune/monorepo",
  "version": "0.1.0",
  "description": "메트로놈과 기타/베이스 튜너 기능을 제공하는 하이브리드 모바일 앱",
  "private": true,
  "packageManager": "pnpm@10.0.0",
  "scripts": {
    "dev": "nx run-many --target=serve --all --parallel",
    "build": "nx run-many --target=build --all",
    "test": "nx run-many --target=test --all",
    "lint": "nx run-many --target=lint --all",
    "type-check": "nx run-many --target=type-check --all",
    "clean": "nx reset && nx run-many --target=clean --all",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "keywords": [
    "metronome",
    "tuner",
    "guitar",
    "bass",
    "react-native",
    "nextjs",
    "hybrid-app",
    "mobile-app"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": "^24.0.0",
    "pnpm": ">=10.0.0"
  },
  "devDependencies": {
    "@nx/workspace": "^22.4.0",
    "@types/node": "^24.0.0",
    "nx": "^22.4.0",
    "prettier": "^3.0.0",
    "typescript": "^5.9.3",
    "eslint": "^9.0.0",
    "@nx/eslint": "^22.4.0"
  }
}
